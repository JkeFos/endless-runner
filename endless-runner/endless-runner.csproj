<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <RootNamespace>endless_runner</RootNamespace>
    <UseWPF>true</UseWPF>
    <StartupObject>endless_runner.App</StartupObject>
    <Description>Endless runner game.</Description>
    <PackageProjectUrl>https://github.com/JkeFos/endless-runner</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JkeFos/endless-runner</RepositoryUrl>
    <RepositoryType>Open source.</RepositoryType>
    <PackageTags>Endless runner, game.</PackageTags>
    <NeutralLanguage>en-AU</NeutralLanguage>
    <ApplicationIcon>runner_07.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\background.png" />
    <None Remove="Images\obstacle.png" />
    <None Remove="Images\runner_01.gif" />
    <None Remove="Images\runner_02.gif" />
    <None Remove="Images\runner_03.gif" />
    <None Remove="Images\runner_04.gif" />
    <None Remove="Images\runner_05.gif" />
    <None Remove="Images\runner_06.gif" />
    <None Remove="Images\runner_07.gif" />
    <None Remove="Images\runner_08.gif" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\background.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\obstacle.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_01.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_02.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_03.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_04.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_05.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_06.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_07.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\runner_08.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
